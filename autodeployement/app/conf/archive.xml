					<machine name="webhost02.preprod04.edt02.net" />
				</target>
				<action name="remove-cache" type="after" cmd="rm -rf /var/www/static/app/cache/*"></action>
			</archive>

			<archive name="s7" dir="/home/emc/s7" src="hudson">
				<target cluster="consume" username="emc">
