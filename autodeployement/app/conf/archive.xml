			<archive name="s7test" dir="/home/emc/s7test" src="hudson">
				<target cluster="ordohost" username="emc">
					<machine name="ordohost01.preprod04.edt02.net" />
					<machine name="ordohost02.preprod04.edt02.net" />					
				</target>
				<target cluster="compute" username="emc">
					<machine name="compute01.preprod04.edt02.net" />
					<machine name="compute02.preprod04.edt02.net" />
				</target>
				<target cluster="consume" username="emc">
					<machine name="consume01.preprod04.edt02.net" />
